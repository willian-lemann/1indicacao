generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  relationMode      = "prisma"
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model User {
  id          String   @unique @default(uuid())
  name        String?
  email       String?  @unique
  userId      String   @unique
  role        String
  jobs        Job[]
  description String?  @db.Text
  position    String?
  instagram   String?
  phone       String?
  avatar      String?
  location    Location @relation(fields: [locationId], references: [id])
  locationId  String

  @@index([locationId])
  @@map("users")
}

model Job {
  id          String   @unique @default(uuid())
  isActive    Boolean  @default(true)
  positions   Int
  salary      String
  position    String
  description String?  @db.Text
  createdAt   DateTime @default(now())
  user        User?    @relation(fields: [userId], references: [userId])
  userId      String?
  location    Location @relation(fields: [locationId], references: [id])
  locationId  String

  @@index([userId])
  @@index([locationId])
  @@map("jobs")
}

model RandomJob {
  id          String   @unique @default(uuid())
  salary      String
  position    String
  description String   @db.Text
  companyName String
  createdAt   DateTime
  locationId  String
  location    Location @relation(fields: [locationId], references: [id])

  @@index([locationId])
  @@map("random_jobs")
}

model Location {
  id        String      @unique @default(uuid())
  name      String
  code      String
  users     User[]
  Job       Job[]
  RandomJob RandomJob[]

  @@map("locations")
}
